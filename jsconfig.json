{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "ui-framework": [
        "./src/ui-framework"
      ],
      "app-utils/*": [
        "./src/application/lib/utils/*"
      ],
      "app-lib/*": [
        "./src/application/lib/*"
      ],
      "app-services": [
        "./src/application/services"
      ],
      "app-images": [
        "./src/assets/images"
      ],
      "shared-components/*": [
        "./src/application/shared-components/*"
      ]
    }
  }
}
